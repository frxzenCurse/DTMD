mixin card 
  a.card(href="#" class=attributes.class)
    .card__container
      .card__hover 
        img.card__hover-img(src="assets/images/card-hover.jpg", alt="")
      if (attributes.discount)
        .card__discount
          |- 15%
      .card__icon(class=(attributes.isActive ? 'active' : null))
        +favorite-svg.card__svg
      .card__image 
        img.card__img(src=`assets/images/${attributes.img}.jpg`, alt="")
    .card__title 
      |Брюки PELEGRINNI 105
    .card__text 
      |12 400 руб.
      if (attributes.old)
        span.card__old
          |14 350 руб.
